
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_MyBlogBigLayout.cshtml";
}

<section class="post">
    <div class="row">
        <div class="col-12">
            <h2>Sign In</h2>
        </div>
        <div class="col-12">

            <ul class="actions fit">
                <li><a id="googleSignIn" onclick="" class="button primary fit">Google</a></li>
            </ul>
        </div>
    </div>
</section>
<script src="/Template/custom/js/view/SignInLayoutManager.js"></script>
<script>
    function DocumentReadyFunc()
    {

        PrintLogMessage("SignIn", "DocumentReadyFunc", "init", LOG_LEVEL_INFO)
        tabMenuManager.ActiveSecondMenu()
        tabMenuManager.ChangeSecondMenu("Sign in", "/Blog/SignIn")

        BtnOnClickGoogleSignIn(function () {
            authManager.CurrentAuthStatus(function () {
                $(location).attr('href', '/Blog/Index');

            })
        });        
    }
</script>